<%- include ("../partials/header") %> 

<div class="container text-center mt-5">
	<h1>Edit Camp Details </h1>

	<div class="m-auto pt-3" style="width: 70%;">
		<form action="/camp/<%= f._id %>?_method=PUT" method="POST">
			<div class="form-group">
				<input type="text" class="form-control" name="camp[name]" value="<%= f.name %>">
			</div>
			<div class="form-group">
			<input type="text" class="form-control" name="camp[image]" value="<%= f.image %>">
			</div>
			<div class="form-group">
			<input type="number" class="form-control" min="0.01" step="0.01" name="camp[price]" value="<%= f.price %>">
			</div>
			<div class="form-group">
			<input type="text" class="form-control" name="camp[description]" value="<%= f.description %>">
			</div>
			<div class="form-group">	
				<button class="btn btn-lg btn-info btn-block">Submit</button>
			</div>
			
		</form>
	</div>
</div>
<%- include ("../partials/footer") %> 
